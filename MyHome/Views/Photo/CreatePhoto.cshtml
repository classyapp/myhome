@model Classy.DotNet.Mvc.ViewModels.Listing.CreateListingViewModel<MyHome.Models.PhotoMetadata>

@{
    ViewBag.Title = "CreateListing_photo";
    Html.Bootstrap().Globals().ShowRequiredStar(false);

    var rooms = Localizer.GetList("rooms");
    var styles = Localizer.GetList("room-styles");
}

<div class="row">
    <div class="col-md-7 main">
        <h1>@Localizer.Get("CreatePhoto_PageTitle")</h1>
        @Html.Bootstrap().ValidationSummary()

        @using (var f = Html.Bootstrap().Begin(new Form("CreateListing", "Photo").HtmlAttributes(new { enctype = "multipart/form-data" })))
        {
            @f.FormGroup().TextBoxFor(x => x.Title).ShowValidationMessage(false).Label()
            @f.FormGroup().TextAreaFor(x => x.Content).ShowValidationMessage(false).Label()
            @f.FormGroup().DropDownListFor(x => x.Metadata.Room, rooms).OptionLabel(Localizer.Get("List_Label_Rooms")).ShowValidationMessage(false).Label()
            @f.FormGroup().DropDownListFor(x => x.Metadata.Style, styles).OptionLabel(Localizer.Get("List_Label_Styles")).ShowValidationMessage(false).Label()
            @f.FormGroup().TextBoxFor(x => x.Metadata.CopyrightMessage).ShowValidationMessage(false).Label().WidthLg(12)
            <div class="alert alert-warning">
                @*@f.FormGroup().File("file").HtmlAttributes(new { multiple = "multiple", accept = "image/*" }).Label().Class("sr-only")*@
                <div class=" form-group">
                    <button class="btn btn-info btn-select-files" type="button">
                        @Localizer.Get("CreatePhoto_Select_Files")
                        <input accept="image/*" id="file" multiple="multiple" name="file" type="File" value="" />
                    </button>
                    <div id="filesPreview" class="row"></div>
                </div>
            </div>
            
            <p>
                <small>
                    @Html.Bootstrap().CheckBoxFor(x => x.Metadata.AgreeToTerms).IsChecked(false).ShowValidationMessage(false).Label().ShowRequiredStar(false)
                    @Html.Bootstrap().CheckBoxFor(x => x.Metadata.AgreeToRights).IsChecked(false).ShowValidationMessage(false).Label().ShowRequiredStar(false)
                </small>
            </p>
            @f.FormGroup().CustomControls(Html.Bootstrap().Button().HtmlAttributes(new { id = "uploadBtn", onclick = "uploadPhotos()" }).Text(Localizer.Get("CreatePhoto_Submit")).Class("btn-success"))
            
            
        }
    </div>

    <div class="col-md-4 col-md-offset-1 well">
        <h1>@Localizer.Get("CreatePhoto_Title_DoDont")</h1>
        <div>@Html.Raw(Localizer.Get("CreatePhoto_Content_DoDont"))</div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/Scripts/xhr-upload.js"></script>
    <script type="text/javascript" src="~/Scripts/new_photo.js"></script>
    <script type="text/javascript">
        var uploadPhotoUrl = '@Url.RouteUrl("CreatePhoto", new { httproute = "", controller = "Photo", action = "CreateListing" })';
        var redirectUrl = '@Url.RouteUrl("PublicProfilePhotos", new { profileId = (System.Web.HttpContext.Current.User.Identity as Classy.DotNet.Security.ClassyIdentity).Profile.Id })?photosUploaded=1';
    </script>
}