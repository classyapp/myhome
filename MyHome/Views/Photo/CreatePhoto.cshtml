@model Classy.DotNet.Mvc.ViewModels.Listing.CreateListingViewModel<MyHome.Models.PhotoMetadata>

@{
    ViewBag.Title = "CreateListing_photo";
    Html.Bootstrap().Globals().ShowRequiredStar(false);

    var rooms = Localizer.GetList("rooms");
    var styles = Localizer.GetList("room-styles");
}

<div class="row">
    <div class="col-md-7 main">
        <h1>@Localizer.Get("CreatePhoto_PageTitle")</h1>
        <hr />

        @Html.Bootstrap().ValidationSummary()

        @using (var f = Html.Bootstrap().Begin(new Form("CreateListing", "Photo").HtmlAttributes(new { enctype = "multipart/form-data" })))
        {
            @Html.HiddenFor(x => x.CollectionType)
            if (Model.CollectionType == Classy.DotNet.Responses.CollectionType.PhotoBook)
            {
            @f.FormGroup().DropDownListFor(x => x.CollectionId, Model.CollectionList).ShowValidationMessage(false).OptionLabel(Localizer.Get("CreatePhoto_CreatePhotoBookTitle")).Label().WidthLg(12).LabelText(Localizer.Get("CreatePhoto_PhotoBookTitle"))
            @f.FormGroup().Id("title").TextBoxFor(x => x.Title).Placeholder(Localizer.Get("CreatePhoto_CollectionTitlePlaceholder")).ShowValidationMessage(false).Label().Class("hide") //.Label().WidthLg(12).LabelText(Localizer.Get("CreateListing_PhotoBookTitle"))
            }
            else
            {
            @f.FormGroup().DropDownListFor(x => x.CollectionId, Model.CollectionList).ShowValidationMessage(false).OptionLabel(Localizer.Get("CreatePhoto_CreateProjectTitle")).Label().WidthLg(12).LabelText(Localizer.Get("CreatePhoto_ProjectTitle"))
            @f.FormGroup().Id("title").TextBoxFor(x => x.Title).Placeholder(Localizer.Get("CreatePhoto_ProjectTitlePlaceholder")).ShowValidationMessage(false).Label().Class("hide") //.Label().WidthLg(12).LabelText(Localizer.Get("CreateListing_ProjectTitle"))
            }
            @f.FormGroup().Id("content").TextAreaFor(x => x.Content).ShowValidationMessage(false).Label().WidthLg(12)
            @f.FormGroup().DropDownListFor(x => x.Metadata.Room, rooms.WithParent(null).AsSelectList()).OptionLabel(Localizer.Get("List_Label_Rooms")).ShowValidationMessage(false).Label().WidthLg(12).LabelText(Localizer.Get("CreatePhoto_RoomLabel"))
            @f.FormGroup().DropDownListFor(x => x.Metadata.Style, styles.AsSelectList()).OptionLabel(Localizer.Get("List_Label_Styles")).ShowValidationMessage(false).Label().WidthLg(12)
            @f.FormGroup().TextBoxFor(x => x.Metadata.CopyrightMessage).ShowValidationMessage(false).Label().WidthLg(12)
            <div class="alert alert-warning">
                @*@f.FormGroup().File("file").HtmlAttributes(new { multiple = "multiple", accept = "image/*" }).Label().Class("sr-only")*@
                <div class=" form-group">
                    <button class="btn btn-warning btn-select-files" type="button">
                        @Localizer.Get("CreatePhoto_SelectFiles")
                        <input accept="image/*" id="file" multiple="multiple" name="file" type="File" value="" />
                        @Html.HiddenFor(x => x.DummyFile)
                    </button>

                    @if ((User.Identity as Classy.DotNet.Security.ClassyIdentity).Profile.IsFacebookConnected) {                        
                        <a id="load-fb" href="#" data-toggle="modal" data-target="#load-fb-modal" class="btn btn-primary btn-select-files">@Localizer.Get("CreatePhoto_LoadFromFacebook")</a>
                    }
                    
                    <div id="filesPreview" class="row"></div>
                </div>
            </div>
            
            <p>
                <small>
                    @Html.Bootstrap().CheckBoxFor(x => x.Metadata.AgreeToTerms).IsChecked(false).ShowValidationMessage(false).Label().ShowRequiredStar(false)
                    @Html.Bootstrap().CheckBoxFor(x => x.Metadata.AgreeToRights).IsChecked(false).ShowValidationMessage(false).Label().ShowRequiredStar(false)
                </small>
            </p>
            @f.FormGroup().CustomControls(Html.Bootstrap().Button().HtmlAttributes(new { id = "uploadBtn", onclick = "uploadPhotos()" }).Text(Localizer.Get("CreatePhoto_Submit")).Style(ButtonStyle.Primary))
            
            
        }
    </div>

    <div class="col-md-4 col-md-offset-1 helpbar">
        @if (Model.CollectionType == Classy.DotNet.Responses.CollectionType.PhotoBook)
        {
            <h1>@Localizer.Get("CreatePhoto_PhotoBook_Title_DoDont")</h1>
            <div class="content">
                @Html.Raw(Localizer.Get("CreatePhoto_PhotoBook_Content_DoDont"))
            </div>
        }
        else
        {
            <h1>@Localizer.Get("CreatePhoto_Project_Title_DoDont")</h1>
            <div class="content">
                @Html.Raw(Localizer.Get("CreatePhoto_Project_Content_DoDont"))
            </div> 
        }
    </div>
</div>

    <!-- photo edit mpdal -->
<div class="modal fade" id="load-fb-modal" data-remote="@Url.RouteUrl("LoadFacebookAlbums")" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" id="load-fb-replace">
            <!-- will be replaced -->
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/Scripts/xhr-upload.js"></script>
    <script type="text/javascript" src="~/Scripts/new_photo.js"></script>
    <script type="text/javascript">
        var uploadPhotoUrl = '@Url.RouteUrl("CreatePhoto", new { httproute = "", controller = "Photo", action = "CreateListing" })';
        var redirectUrl = '@Url.RouteUrl("PublicProfilePhotos", new { profileId = (System.Web.HttpContext.Current.User.Identity as Classy.DotNet.Security.ClassyIdentity).Profile.Id })?photosUploaded=1';

        $('#CollectionId').change(function () {
            if ($(this).val() == '') {
                $('#Title,#Content').val('');
                $('#title, #content').show();
            }
            else {
                $('#Title').val($(this)[0].options[$(this)[0].selectedIndex].text);
                $('#title, #content').hide();
            }
        });

        @if (Model.CollectionType == Classy.DotNet.Responses.CollectionType.Project)
        {
            @:$("#Title").attr("data-val-required", "@Localizer.Get("CreateListing_ProjectTitleRequired")");
        }
    </script>
}