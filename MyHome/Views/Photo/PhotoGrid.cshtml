@model IList<Classy.DotNet.Responses.ListingView>

@if (Model.Count() > 0)
{
    foreach (var p in Model)
    {
        if (p.ExternalMedia.Count > 0)
        {
            var thumb = p.ExternalMedia[0].Thumbnails.SingleOrDefault(x => x.Width == 266);
    <div class="col-md-4">
        <div class="thumbnail">
            @Html.Partial("PhotoActions", new Classy.DotNet.Mvc.ViewModels.Listing.PhotoActionsViewModel { Listing = p, ShowCollect = true, ShowEdit = true, ShowFavorite = true })
            <img src="@(thumb != null ? thumb.Url : "/img/missing-thumb.png")" title="@p.Title" alt="@p.Title" />
            <div class="details">
                <strong>@Html.ListingLink("Photo", p)</strong>
                <br />
                <small>@string.Format(Localizer.Get("PublicProfile_Photo_Comments"), p.CommentCount)</small>
            </div>
        </div>
    </div>
        }
    }
}
