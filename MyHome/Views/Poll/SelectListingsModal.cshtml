@model IList<Classy.DotNet.Responses.CollectionView>

@{
    
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@Localizer.Get("SelectListingsModal_Title")</h4>
</div>
<div class="modal-body">
    @*<div class="row">
        <div id="photos-count" class="col-md-12 hidden">@Localizer.Get("LoadFacebookAlbums_PhotosSelected")&nbsp;<span>0</span></div>
    </div>*@
    <div class="row" style="margin: 20px auto;">
        @foreach (var collection in Model)
        {
            <div class="col-md-4">
                @Html.Partial("Thumbnails", collection.CoverPhotos)
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12"><a class="btn btn-primary" onclick="selectListingsSubmit()">@Localizer.Get("SelectListingsModal_SubmitButton")</a></div>
    </div>
</div>
