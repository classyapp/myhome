@model Classy.DotNet.Mvc.ViewModels.Profiles.TranslateProfileViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">@Localizer.Get("TranslateProfile_TranslateTitle")</h4>
</div>
<div class="modal-body">
    <p>
        @Localizer.Get("TranslateProfile_DefaultLanguageInstructions")
    </p>
    @using (var f = Ajax.Bootstrap().Begin(new Form("Translate", "Profile").RouteValues(new { ProfileId = Model.ProfileId }).Id("frmTranslate"), new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        UpdateTargetId = "translate-modal-replace",
        OnSuccess = "CloseModal(data)"
    }))
    {
        @Html.Bootstrap().ValidationSummary()
        @f.FormGroup().DropDownListFor(x => x.CultureCode, Localizer.GetList("supported-cultures").AsSelectList(new string[] { Model.CultureCode })).ShowValidationMessage(false).Label().WidthLg(12).ShowRequiredStar(false)
        @f.FormGroup().TextBoxFor(x => x.CompanyName).ShowValidationMessage(false).Label().WidthLg(12).ShowRequiredStar(false)
        @f.FormGroup().TextAreaFor(x => x.BusinessDescription).ShowValidationMessage(false).Label().WidthLg(12).ShowRequiredStar(false)
        @f.FormGroup().TextAreaFor(x => x.ServicesProvided).ShowValidationMessage(false).Label().WidthLg(12).ShowRequiredStar(false)
        @Html.HiddenFor(x => x.Action)

        <div class="form-buttons">
            <button class="btn btn-default" data-dismiss="modal">@Localizer.Get("Cancel")</button>
            <button class="btn btn-warning" type="submit" onclick="$('#Action').val('DELETE');">@Localizer.Get("Delete")</button>
            <button class="btn btn-primary" type="submit">@Localizer.Get("Save")</button>
        </div>
    }
</div>
<script type="text/ecmascript">
    $("#CultureCode").on("change", function () {
        $.get("/profile/@Model.ProfileId/translate/" + $("#CultureCode").val(), function (response) {
            $("#frmTranslate #CompanyName").val(response.CompanyName || "");
            $("#frmTranslate #BusinessDescription").val(response.Metadata.BusinessDescription || "");
            $("#frmTranslate #ServicesProvided").val(response.Metadata.ServicesProvided || "");
        });
    });
    $("#CultureCode").trigger("change");
</script>
